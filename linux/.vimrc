execute pathogen#infect()

filetype plugin on
filetype indent on

set autoread

set ruler

set ignorecase

set hlsearch

set incsearch

syntax enable

colorscheme desert
set background=dark

set encoding=utf8

set ffs=unix,dos,mac

set nobackup
set nowb
set noswapfile

set expandtab

set smarttab

set shiftwidth=4
set tabstop=4


set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

set laststatus=2

set statusline=\ %F%m%r%h\ %w\ \ CWD:\ %r%{getcwd()}%h\ \ \ Line:\ %l
